{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "version": "1.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "minimum_chrome_version": "23",
    "permissions": ["tabs", "*://*/*", "webRequest", "clipboardWrite", "clipboardRead", "activeTab", "storage", "contextMenus"],
    "content_scripts": [
        {
            "js": [ "data/deps/jquery/jquery.js",
                "data/deps/mustache/mustache.js",
                "data/js/side-panel.js",
                "data/js/common-lib.js",
                "data/js/content-script.js"],
            "matches": [ "*://*/*", "https://*/*"],
            "css": ["styles/highlight.css", "styles/panel.css"]
        }
    ],

    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png"
        },
        "default_title": "Elog.io plugin"
    },
    "icons": {
        "16": "img/icon_16.png",
        "32": "img/icon_32.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "options_page": "prefs/preferences.html",
    "background": {
        "scripts": ["data/deps/jquery/jquery.js", "main/common-chrome-lib.js", "main/main.js"],
        "run_at": "document_end"
    },
    "web_accessible_resources": [
        "img/**",
        "html/**",
        "data/**",
        "styles/**",
        "data/**",
        "**://**"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https:// ; object-src 'self'"
}